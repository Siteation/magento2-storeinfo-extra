<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <referenceContainer name="after.body.start">
        <block name="storeinfo.notices" template="Siteation_StoreInfoExtra::luma/notices.phtml">
            <arguments>
                <argument name="viewModelStoreInfo"
                    xsi:type="object">Siteation\StoreInfoExtra\ViewModel\StoreInfoNotice</argument>
            </arguments>
        </block>
    </referenceContainer>


    <referenceContainer name="footer">
        <block name="storeinfo.socials" template="Siteation_StoreInfoExtra::luma/socials.phtml">
            <arguments>
                <argument name="viewModelStoreInfo"
                    xsi:type="object">Siteation\StoreInfoExtra\ViewModel\StoreInfoExtra</argument>
            </arguments>
        </block>
    </referenceContainer>
</page>
